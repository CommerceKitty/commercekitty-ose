{% extends 'layout.html.twig' %}

{% block title %}{{entity.name}} | {{'warehouses'|trans}}{% endblock %}

{% block breadcrumbs %}
  {% embed '_bootstrap/breadcrumb.html.twig' %}
    {% block crumbs %}
      {% import '_bootstrap/breadcrumb.html.twig' as breadcrumb %}
      {{breadcrumb.item('warehouses', 'warehouse_index')}}
      {{breadcrumb.item(entity)}}
    {% endblock %}
  {% endembed %}
{% endblock breadcrumbs %}

