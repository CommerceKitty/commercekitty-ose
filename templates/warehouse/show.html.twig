  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-2">
        {# @todo menu event #}
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link" href="{{path('warehouse_edit', {'id':entity.id})}}"><i class="fas fa-edit fa-fw"></i>&nbsp;{{'edit'|trans}}</a>
          <a class="nav-link" href="{{path('warehouse_clone', {'id':entity.id})}}"><i class="fas fa-clone fa-fw"></i>&nbsp;{{'clone'|trans}}</a>
          {#<a class="nav-link" href="{{path('warehouse_log', {'id':entity.id})}}"><i class="fas fa-terminal fa-fw"></i>&nbsp;{{'log'|trans}}</a>#}
          <a class="nav-link text-danger" href="{{path('warehouse_delete', {'id':entity.id})}}"><i class="fas fa-trash fa-fw"></i>&nbsp;{{'delete'|trans}}</a>
        </div>
      </div>
      <div class="col-sm-10">
        {% embed '_bootstrap/table.html.twig' %}
          {% block tbody %}
            <tr><th>{{'id'|trans}}</th><td>{{entity.id}}</td></tr>
            <tr><th>{{'name'|trans}}</th><td>{{entity.name}}</td></tr>
          {% endblock %}
        {% endembed %}
