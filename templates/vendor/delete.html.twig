{#
  @var FormViewInterface form
  @var VendorInterface entity
#}
{% extends 'layout.html.twig' %}

{% block title %}{{'delete'|trans}} | {{entity}} | {{'vendors'|trans}}{% endblock %}

{% block breadcrumbs %}
  {% embed '_bootstrap/breadcrumb.html.twig' %}
    {% block crumbs %}
      {% import '_bootstrap/breadcrumb.html.twig' as breadcrumb %}
      {{breadcrumb.item('vendors', 'vendor_index')}}
      {{breadcrumb.item(entity, 'vendor_show', {'id':entity.id})}}
      {{breadcrumb.item('delete')}}
    {% endblock %}
  {% endembed %}
{% endblock breadcrumbs %}

{% block content %}
  {% import '_bootstrap/button.html.twig' as btn %}
  <div class="container">
    <div class="row">
      <div class="col-sm">
        {{form_start(form)}}
          {{btn.link('fas fa-ban fa-fw', 'cancel', 'vendor_show', {'id':entity.id})}}
          {{btn.submit('fas fa-trash fa-fw', 'delete', 'danger')}}
        {{form_end(form)}}
      </div>
    </div>
  </div>
{% endblock %}
