{#
  @var ProductInterface entity
#}
{% extends 'layout.html.twig' %}

{% block title %}{{entity.name}} | {{'products'|trans}}{% endblock %}

{% block breadcrumbs %}
  {% embed '_bootstrap/breadcrumb.html.twig' %}
    {% block crumbs %}
      {% import '_bootstrap/breadcrumb.html.twig' as breadcrumb %}
      {{breadcrumb.item('products', 'product_index')}}
      {{breadcrumb.item(entity)}}
    {% endblock %}
  {% endembed %}
{% endblock breadcrumbs %}

{% block content %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-2">
        {# @todo menu event, include product/_menu.html.twig #}
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link" href="{{path('product_inventory', {'id':entity.id})}}"><i class="fas fa-boxes fa-fw"></i>&nbsp;{{'inventory'|trans}}</a>
          <a class="nav-link" href="{{path('product_edit', {'id':entity.id})}}"><i class="fas fa-edit fa-fw"></i>&nbsp;{{'edit'|trans}}</a>
          <a class="nav-link" href="{{path('product_clone', {'id':entity.id})}}"><i class="fas fa-clone fa-fw"></i>&nbsp;{{'clone'|trans}}</a>
          {#<a class="nav-link" href="{{path('product_log', {'id':entity.id})}}"><i class="fas fa-terminal fa-fw"></i>&nbsp;{{'log'|trans}}</a>#}
          <a class="nav-link text-danger" href="{{path('product_delete', {'id':entity.id})}}"><i class="fas fa-trash fa-fw"></i>&nbsp;{{'delete'|trans}}</a>
        </div>
      </div>
      <div class="col-sm-10">
        {% embed '_bootstrap/table.html.twig' %}
          {% block tbody %}
            <tr><th>{{'id'|trans}}</th><td>{{entity.id}}</td></tr>
            <tr><th>{{'name'|trans}}</th><td>{{entity.name}}</td></tr>
            <tr><th>{{'sku'|trans}}</th><td>{{entity.sku}}</td></tr>
            <tr><th>{{'type'|trans}}</th><td>{{entity.type}}</td></tr>
          {% endblock %}
        {% endembed %}
      </div>
    </div>
  </div>
{% endblock %}
